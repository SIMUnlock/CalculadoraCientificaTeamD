<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TextView
        android:id="@+id/Funciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Funciones"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:textSize="20dp"

        />
    <!--
        android:orientation
            Should the layout be a column or a row?
            Use "horizontal" for a row, "vertical" for a column.
    -->
    <RadioGroup
        android:id="@+id/RFunciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/Funciones"

        >
        <RadioButton
            android:id="@+id/sin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="comprobarGrados"
            android:layout_weight="1"
            android:text="Sin"
            android:paddingRight="10dp"
            />
        <RadioButton
            android:id="@+id/cos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="comprobarGrados"
            android:layout_weight="1"
            android:text="Cos"
            android:paddingRight="10dp"
            />
        <RadioButton
            android:id="@+id/tan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="comprobarGrados"
            android:layout_weight="1"
            android:text="Tan"
            android:paddingRight="10dp"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/Grados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grados"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:textSize="20dp"

        />
    <!--
        android:orientation
            Should the layout be a column or a row?
            Use "horizontal" for a row, "vertical" for a column.
    -->
    <RadioGroup
        android:id="@+id/RGrados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/Grados"
        android:layout_gravity="center"
        >
        <RadioButton
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="45"
            android:onClick="comprobarGrados"
            android:paddingRight="10dp"
            />
        <RadioButton
            android:id="@+id/n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="comprobarGrados"
            android:layout_weight="1"
            android:text="90"
            android:paddingRight="10dp"
            />
        <RadioButton
            android:id="@+id/co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="comprobarGrados"
            android:layout_weight="1"
            android:text="180"
            android:paddingRight="10dp"
            />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/a43303"
        android:layout_below="@id/RGrados"

        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        />

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado: "
        android:layout_below="@id/imageView2"
        android:textSize="20dp"

        />
</LinearLayout>

</android.support.constraint.ConstraintLayout>